{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": false,
      "noUncheckedIndexedAccess": true,
      "noEmit": true
    },
    "include": ["./src/", "index.ts"],
    "exclude": [
      "node_modules", 
      "**/__tests__/*",
      "**/__examples__/*"
    ]
  }